<%- include('partials/header'); -%>

  <h1>Home</h1>
  <p><%= startContent %></p>

  <% allPosts.forEach(function(post) { %>
    <h3> <%= post.title %> </h3>

    <% if (post.content.length > 30) { %>
      <p>
        <%= post.content.substring(0, 30) + "..." %>
        <a href="/posts/ <%= post.title %>">Read more</a>
      </p>
    <% } else { %>
        <p> <%= post.content %> </p>
    <% } %>
  <% }) %>

<%- include('partials/footer'); -%>
